@model MvcStock.Models.Entity.TBLSATISLAR
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Satış Yap
</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius:2rem;">
            <div class="modal-header">
                <h2 class="modal-title">Satış Ekranı</h2>
            </div>
            <form method="post" action="/Satis/YeniSatis">
                <div class="modal-body">
                    <label>Ürün Adı</label>
                    @Html.TextBoxFor(m => m.URUN, new { @class = "form-control", @style = "width:40%" })
                    <br />
                    <label>Müşteri Adı Soyadı</label>
                    @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control", @style = "width:40%" })
                    <br />
                    <label>Adet</label>
                    @Html.TextBoxFor(m => m.ADET, new { @class = "form-control", @style = "width:40%" })
                    <br />
                    <label>Fiyat</label>
                    @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control", @style = "width:40%" })
                    <br />
                    <button type="submit" class="btn btn-info btn-sm">Satış Yap</button>
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>