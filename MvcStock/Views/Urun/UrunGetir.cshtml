@model MvcStock.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post))
{
    <h4>
        <svg xmlns="http://www.w3.org/2000/svg" style="height:10px; margin-right:10px" viewBox="0 0 512 512">
            <path d="M459.5 440.6c9.5 7.9 22.8 9.7 34.1 4.4s18.4-16.6 18.4-29V96c0-12.4-7.2-23.7-18.4-29s-24.5-3.6-34.1
          4.4L288 214.3V256v41.7L459.5 440.6zM256 352V256 128 96c0-12.4-7.2-23.7-18.4-29s-24.5-3.6-34.1 4.4l-192
          160C4.2 237.5 0 246.5 0 256s4.2 18.5 11.5 24.6l192 160c9.5 7.9 22.8 9.7 34.1 4.4s18.4-16.6 18.4-29V352z" />
        </svg><strong><a href="/Urun/Index/" style="text-decoration:none; color:black">Ürünler</a></strong>
    </h4>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.URUNID, "Ürün Id")
        @Html.TextBoxFor(m => m.URUNID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.URUNAD, "Ürün Adı")
        @Html.TextBoxFor(m => m.URUNAD, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.MARKA, "Marka")
        @Html.TextBoxFor(m => m.MARKA, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.URUNKATEGORI, "Kategori")
        @Html.DropDownListFor(m=>m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.FIYAT, "Fiyat")
        @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.STOK, "Stok")
        @Html.TextBoxFor(m => m.STOK, new { @class = "form-control" })
    </div>
    <div style="margin-top:10px;">
        <button class="btn btn-warning btn-sm">Güncellemeleri Kaydet</button>
    </div>

}
<style>
    .form-control {
        width: 40%;
    }
</style>


